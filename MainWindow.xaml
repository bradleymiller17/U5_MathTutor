<Window x:Class="U4_Tutor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U4_Tutor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid x:Name="Grid" >
        <StackPanel x:Name="Stack" HorizontalAlignment="Center">
            <TextBlock x:Name="Title" Text =" Math Tutor." FontSize="24" />
            <Line Margin="0,10" />
            <Line Margin="0,10" />

            <TextBlock x:Name="Question" Text="Your question will appear here."/>
            <TextBox x:Name="txt_Inpt" Text="Enter your answer here." />
            <Line Margin="0,10" />
            <Button Width="80" Content="Check Answer" Click="Click_Calc"/>
        </StackPanel>
    </Grid>
</Window>
